datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// --- Enums removed for SQLite compatibility ---

// --- 1. User & Loyalty Profile ---
model User {
  id            String       @id @default(uuid())
  email         String       @unique
  fullName      String
  phone         String?
  
  // FIXED: Added the role field here
  role          String       @default("USER")

  // Loyalty Agent Data
  loyaltyPoints Int          @default(0)
  tier          String       @default("BRONZE")
  
  // Relationships
  orders        Order[]
  chats         ChatSession[]
  
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
}

// --- 2. Product Catalog ---
model Product {
  id          String   @id @default(uuid())
  sku         String   @unique  // e.g., "NIKE-AIR-RED-10"
  name        String
  description String?
  price       Decimal
  category    String   // e.g., "Footwear", "Apparel"
  imageUrl    String?

  // Relationships
  inventory   Inventory[]
  orderItems  OrderItem[]
  
  createdAt   DateTime @default(now())
}

// --- 3. Inventory Agent Data ---
// Separated from Product because one item exists in many stores
model Inventory {
  id          String   @id @default(uuid())
  productId   String
  location    String   // e.g., "Warehouse_Main", "Store_Connaught_Place"
  quantity    Int      @default(0)
  aisle       String?  // e.g., "Row 4, Shelf B" (For in-store navigation)

  product     Product  @relation(fields: [productId], references: [id])

  @@unique([productId, location]) // Prevent duplicate entries for same item in same store
}

// --- 4. Order & Payment Processing ---
model Order {
  id            String        @id @default(uuid())
  userId        String
  totalAmount   Decimal
  
  // Status Tracking
  status        String        @default("PENDING")
  paymentStatus String        @default("PENDING")
  paymentId     String?       // Transaction ID from Payment Gateway
  
  // Fulfillment Info
  deliveryAddress String?     // If Null, assume Store Pickup
  pickupStore     String?     // If populated, it is "Click & Collect"

  // Relationships
  user          User          @relation(fields: [userId], references: [id])
  items         OrderItem[]

  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

// Link table between Orders and Products
model OrderItem {
  id        String  @id @default(uuid())
  orderId   String
  productId String
  quantity  Int
  price     Decimal

  order     Order   @relation(fields: [orderId], references: [id])
  product   Product @relation(fields: [productId], references: [id])
}

// --- 5. Context Switching (Memory) ---
model ChatSession {
  id        String   @id @default(uuid())
  userId    String
  
  // Stores the entire conversation history as a JSON object
  messages  String     
  
  device    String?  // e.g., "Mobile", "Kiosk"
  summary   String?  // Optional: AI-generated summary of intent

  user      User     @relation(fields: [userId], references: [id])
  
  updatedAt DateTime @updatedAt
}